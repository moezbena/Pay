		</dependency>
		
		<!-- webjars / w_lib -->
        <dependency>
            <groupId>mc.gouv.xwlib</groupId>
            <artifactId>xwlib-webjar</artifactId>
            <version>1.1.0</version>
        </dependency>

	</dependencies>
</project>
